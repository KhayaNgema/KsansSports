@model IEnumerable<MyField.Models.MatchFormation>

<h5 class="text-center" style="background-color:lightgrey; padding:10px;">Formation</h5>
<br />
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div style="text-align: center;">@Html.DisplayFor(modelItem => item.Formation.FormationName)</div>
    }
}
else
{
    <p class="text-center" style="margin-top: 20vh; margin-bottom: 20vh;">No formation selected.</p>
}