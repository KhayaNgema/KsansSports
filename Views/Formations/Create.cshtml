@model MyField.ViewModels.FormationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Formation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FormationName" class="control-label"></label>
                <input asp-for="FormationName" class="form-control" />
                <span asp-validation-for="FormationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FormationImages" class="control-label"></label>
                <input type="file" asp-for="FormationImages" class="form-control" />
                <span asp-validation-for="FormationImages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

