@{
    ViewData["Title"] = "Fans Administrator Dashboard";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh; /* Reduced height */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
        color: #030319;
        font-size: 20px; /* Adjusted font size */
    }

    .card-text {
        color: #030319;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #030319;
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />
<h2>FANS ADMINISTRATOR</h2>
<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card all-fans-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> All division fans</h5>
                    <p class="card-text">All division fans are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.DivisionFans</h1>
                    <a asp-controller="Users" asp-action="DivisionFans" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fans</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card active-fans-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Active fans</h5>
                    <p class="card-text">Active fans are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ActiveFans</h1>
                    <a asp-controller="Users" asp-action="ActiveFans" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fans</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card inactive-fans-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Inactive fans</h5>
                    <p class="card-text">Inactive fans are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.InactiveFans</h1>
                    <a asp-controller="Users" asp-action="InactiveFans" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fans</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card meetings-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Meetings</h5>
                    <p class="card-text">Scheduled meetings are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ScheduledMeetings</h1>
                    <a asp-controller="Meetings" asp-action="cheduledMeetings" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Meetings</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card support-queries-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-search"></i>Support queries</h5>
                    <p class="card-text">Support queries are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SupportQueries</h1>
                    <a asp-controller="Queries" asp-action="SupportQueries" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Queries</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card comments-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-comments"></i> Comments</h5>
                    <p class="card-text">Comments are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.Comments</h1>
                    <a asp-controller="Comments" asp-action="Comments" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Comments</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
