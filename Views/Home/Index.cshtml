@{
    ViewData["Title"] = "Home Page";
    if (User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_FansPagesLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
@if(User.Identity.IsAuthenticated)
{
    <div class="tab-content">
        <div class="tab-pane fade show active" id="sportnews" role="tabpanel" aria-labelledby="sportnews-tab"></div>
        <div class="tab-pane fade" id="fixtures" role="tabpanel" aria-labelledby="fixtures-tab"></div>
        <div class="tab-pane fade" id="standings" role="tabpanel" aria-labelledby="standings-tab"></div>
        <div class="tab-pane fade" id="matchresults" role="tabpanel" aria-labelledby="matchresults-tab"></div>
        <div class="tab-pane fade" id="clubs" role="tabpanel" aria-labelledby="clubs-tab"></div>
        <div class="tab-pane fade" id="players" role="tabpanel" aria-labelledby="players-tab"></div>
        <div class="tab-pane fade" id="managers" role="tabpanel" aria-labelledby="managers-tab"></div>
        <div class="tab-pane fade" id="topScores" role="tabpanel" aria-labelledby="topScores-tab"></div>
        <div class="tab-pane fade" id="topAssists" role="tabpanel" aria-labelledby="topAssists-tab"></div>
    </div>
}
else
{
    <div class="tab-content">
        <div class="tab-pane fade show active" id="sportnews" role="tabpanel" aria-labelledby="sportnews-tab"></div>
        <div class="tab-pane fade" id="fixtures" role="tabpanel" aria-labelledby="fixtures-tab"></div>
        <div class="tab-pane fade" id="standings" role="tabpanel" aria-labelledby="standings-tab"></div>
        <div class="tab-pane fade" id="matchresults" role="tabpanel" aria-labelledby="matchresults-tab"></div>
        <div class="tab-pane fade" id="clubs" role="tabpanel" aria-labelledby="clubs-tab"></div>
    </div>
}

