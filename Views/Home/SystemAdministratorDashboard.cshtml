@{
    ViewData["Title"] = "System Administrator Dashboard";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh; /* Reduced height */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
        color: #030319;
        font-size: 20px; /* Adjusted font size */
    }

    .card-text {
        color: #030319;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #030319;
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />
<h2>SYSTEM ADMINISTRATOR</h2>
<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card clubs-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-newspaper"></i> Sport News</h5>
                    <p class="card-text">Sport news are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SportNews</h1>
                    <a asp-controller="SportNews" asp-action="SportNewsList" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>News</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card sport-members-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-futbol"></i>Fixtures</h5>
                    <p class="card-text">Fixtures are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.UpcomingFixtures</h1>
                    <a asp-controller="Fixtures" asp-action="FixturesBackOffice" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fixtures</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-managers-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-futbol"></i> Match Results</h5>
                    <p class="card-text">Match Results are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.MatchResults</h1>
                    <a asp-controller="MatchResults" asp-action="MatchResultsBackOffice" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Results</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card clubs-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-futbol"></i> Participating Clubs</h5>
                    <p class="card-text">Participating clubs will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ParticipatingClubs</h1>
                    <a asp-controller="Clubs" asp-action="Clubs" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Clubs</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card sport-members-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i>Sport Members</h5>
                    <p class="card-text">All enrolled sport members will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SportMembers</h1>
                    <a asp-controller="Users" asp-action="SportMembers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Members</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-managers-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Club Managers</h5>
                    <p class="card-text">System stats are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ClubManagers</h1>
                    <a asp-controller="Users" asp-action="ClubManagers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Managers</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card players-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Players</h5>
                    <p class="card-text">All division players will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ClubPlayers</h1>
                    <a asp-controller="Users" asp-action="ClubPlayers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Players</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>



        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card officials-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-flag"></i> Officials</h5>
                    <p class="card-text">All division officials will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.Officials</h1>
                    <a asp-controller="Users" asp-action="Officials" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Officials</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-administrators-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Club Administrators</h5>
                    <p class="card-text">Club administrators are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ClubAdministrators</h1>
                    <a asp-controller="Users" asp-action="ClubAdministrators" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Admins</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card meetings-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Meetings</h5>
                    <p class="card-text">Scheduled sport news meetings will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SportNewsMeetings</h1>
                    <a asp-controller="Meetings" asp-action="Meetings" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Meetings</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>


        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-fines-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-money-bill-wave"></i> Fines</h5>
                    <p class="card-text">CLub fines will be listed here</p>
                    <h1 class="card-text text-center" style="color:green">
                        <i class="fas fa-money-bill-wave"></i>
                    </h1>
                    <a asp-controller="Fines" asp-action="Fines" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fines</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card comments-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-comments"></i> Comments</h5>
                    <p class="card-text">All comments will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.Comments</h1>
                    <a asp-controller="Comments" asp-action="Comments" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Comments</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
