@model MyField.Models.Club

@{
    ViewData["Title"] = "Player Dashboard";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1);
    }


    .card-title {
        color: #030319;
        font-size: 20px;
    }

    .card-text {
        color: #030319;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #030319;
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />
<h2>
    <div style="display: flex; align-items: center;">
        <img src="~/@Model.ClubBadge" alt="@Model.ClubName" style="width: 60px; height: 60px; margin-right: 20px; object-fit: cover;" />
        <div style="display: flex; flex-direction: column; align-items: flex-start; flex: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
            <h2 style="margin: 0;">@Model.ClubName</h2>
        </div>
    </div>
</h2>

<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-9">
            <div class="card club-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-futbol"></i> My club</h5>
                    <p class="card-text">Club information is found here</p>
                    <h3 class="card-text text-center">
                        <i class="fas fa-users"></i> <i class="fas fa-table"></i> <i class="fas fa-futbol"></i>
                    </h3>
                    <a asp-controller="Clubs" asp-action="MyClub" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Club</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-6 col-lg-3">
            <div class="card fixtures-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Fixtures</h5>
                    <p class="card-text">Club fixtures are listed here</p>
                    <a asp-controller="Fixtures" asp-action="FixtureLineUpUpdate" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fixtures</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card match-results-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-futbol"></i> Match results</h5>
                    <p class="card-text">Match results are listed here</p>
                    <h1 class="card-text text-center">
                        <i class="fas fa-futbol"></i>
                    </h1>
                    <a asp-controller="MatchResults" asp-action="MyMatchResults" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Results</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card meetings-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Meetings</h5>
                    <p class="card-text">Meetings will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ClubMeetings</h1>
                    <a asp-controller="Meetings" asp-action="Meetings" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Meetings</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
