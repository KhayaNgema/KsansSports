@{
    ViewData["Title"] = "Sport Administrator Dashboard";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh; /* Reduced height */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
        color: #030319;
        font-size: 20px; /* Adjusted font size */
    }

    .card-text {
        color: #030319;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #030319;
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />
<h2>SPORT ADMINISTRATOR</h2>
<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card clubs-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Participating Clubs</h5>
                    <p class="card-text">Participating clubs will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ParticipatingClubs</h1>
                    <a asp-controller="Clubs" asp-action="ClubsBackOffice" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Clubs</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card sport-members-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i>Fixtures</h5>
                    <p class="card-text">Fixtures are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.UpcomingFixtures</h1>
                    <a asp-controller="Fixtures" asp-action="FixturesBackOffice" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fixtures</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card club-managers-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-futbol"></i> Match Results</h5>
                    <p class="card-text">Match Results are listed here</p>
                    <a asp-controller="MatchResults" asp-action="MatchResultsBackOffice" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Results</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card club-fines-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-money-bill-wave"></i>Pending fines</h5>
                    <p class="card-text">Pending payment club fines will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.PendingClubFines</h1>
                    <a asp-controller="Fines" asp-action="PendingClubFines" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fines</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card meetings-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Meetings</h5>
                    <p class="card-text">Scheduled sport news meetings will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SportMeetings</h1>
                    <a asp-controller="Meetings" asp-action="Meetings" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Meetings</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
