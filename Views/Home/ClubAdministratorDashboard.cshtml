@model MyField.Models.Club

@{
    ViewData["Title"] = "Club Administrator Dashboard";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh; /* Reduced height */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
        color: #030319;
        font-size: 20px; /* Adjusted font size */
    }

    .card-text {
        color: #030319;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #030319;
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />
<h2>
    <div style="display: flex; align-items: center;">
        <img src="~/@Model.ClubBadge" alt="@Model.ClubName" style="width: 60px; height: 60px; margin-right: 20px; object-fit: cover;" />
        <div style="display: flex; flex-direction: column; align-items: flex-start; flex: 1; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
            <h2 style="margin: 0;">@Model.ClubName</h2>
        </div>
    </div>
</h2>
<br />

<div class="container">

    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-managers-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Club managers</h5>
                    <p class="card-text">Club managers are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.MyClubmanagersCount</h1>
                    <a asp-controller="Users" asp-action="MyClubManagers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Managers</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card club-players-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-users"></i> Club players</h5>
                    <p class="card-text">Club players are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.MyClubPlayersCount</h1>
                    <a asp-controller="Users" asp-action="MyClubPlayers" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Players</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card fixtures-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Fixtures</h5>
                    <p class="card-text">Club fixtures are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.MyClubFixturesCount</h1>
                    <a asp-controller="Fixtures" asp-action="FixtureLineUpUpdate" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Fixtures</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card transfer-requests-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-exchange-alt"></i> Transfer requests</h5>
                    <p class="card-text">Transfer requests are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.MyClubTransferRequestsCount</h1>
                    <a asp-controller="Transfers" asp-action="MyTransferRequestsTabs" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Transfers</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card meetings-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Meetings</h5>
                    <p class="card-text">Meetings will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.CLubAdministratorsMeetingsCount</h1>
                    <a asp-controller="Meetings" asp-action="Meetings" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Meetings</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card aanouncement-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-bullhorn"></i> Announcements</h5>
                    <p class="card-text">Announcements will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.AnnouncementsCount</h1>
                    <a asp-controller="Announcements" asp-action="Announcements" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Announcements</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
