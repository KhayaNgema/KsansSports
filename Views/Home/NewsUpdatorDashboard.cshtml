@{
    ViewData["Title"] = "News Updater Dashboard";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 8px;
        margin-bottom: 20px;
        background: white;
        width: 100%;
        height: 30vh; /* Reduced height */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.1); /* 3D shadow effect */
    }


    .card-title {
        color: #030319;
        font-size: 20px; /* Adjusted font size */
    }

    .card-text {
        color: #030319;
    }

    .btn-primary {
        background-color: #B0E0FC;
        color: #030319;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #030319;
        }

    .styled-button {
        background-color: #ffffff;
        color: #030319;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        text-decoration: none;
    }

        .styled-button span.arrow {
            margin-left: 10px;
        }

    .center-number {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 30%;
        margin: 0;
    }

    h2 {
        color: #D4D4D4;
    }
</style>

<br />
<h2>NEWS UPDATER</h2>
<br />

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card create-news-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-plus"></i> Create news</h5>
                    <p class="card-text">Open this to create news</p>
                    <h1 class="card-text text-center center-number">@ViewBag.NewsPendingApproval</h1>
                    <a asp-controller="SportNews" asp-action="Create" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Create</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-4">
            <div class="card approved-news-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-check-circle" style="color:Green";></i>Approved news</h5>
                    <p class="card-text">Approved news are listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.ApprovedNews</h1>
                    <a asp-controller="SportNews" asp-action="ApprovedSportNews" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>News</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-4">
            <div class="card tobemodified-news-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-pen" style="color:Green;"></i> News to be modified</h5>
                    <p class="card-text">News to be modified are listed here</p>
                    <a asp-controller="SportNews" asp-action="ToBeModifiedSportNews" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>News</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card published-news-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-globe"></i> Published news</h5>
                    <p class="card-text">Published news are listed here</p>
                    <a asp-controller="SportNews" asp-action="PublishedSportNewsBackOffice" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>News</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card meetings-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="fas fa-calendar-alt"></i> Meetings</h5>
                    <p class="card-text">Scheduled sport news meetings will be listed here</p>
                    <h1 class="card-text text-center center-number">@ViewBag.SportNewsMeetings</h1>
                    <a asp-controller="Meetings" asp-action="Meetings" class="btn btn-primary mt-auto align-self-end styled-button">
                        <span>Meetings</span>
                        <span class="arrow">&#10148;</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
