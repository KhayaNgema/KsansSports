@model IEnumerable<MyField.Models.LineUpXI>

@{
    ViewData["Title"] = "Index";
}
<h5 class="text-center" style="background-color:white; padding:10px;">Starting XI (@ViewBag.AwayTeamName)</h5>
<p class="text-center">@ViewBag.ClubFormation</p>
<br />
@if (Model.Any())
{
    <table class="table">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClubPlayer.FirstName)
                    </td>
                    <td>   @Html.DisplayFor(modelItem => item.ClubPlayer.LastName)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClubPlayer.Position)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">No Starting XI</p>
}
