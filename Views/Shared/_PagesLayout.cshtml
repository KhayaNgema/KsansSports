<script>

    $(document).ready(function () {

        $(document).on('click', '.action-button', function () {
            var id = $(this).data('id');
            var $actionTab = $('#actionTab-' + id);
            $('.action-tab').not($actionTab).hide();
            $actionTab.toggle();
        });

        $(document).on('click', function (event) {
            var $target = $(event.target);
            if (!$target.closest('.action-tab').length && !$target.closest('.action-button').length) {
                $('.action-tab').hide();
            }
        });
    });

    $(window).on('load', function () {
        var loadingOverlay = $('#loading-overlay');

        // Hide loading overlay when page has finished loading
        loadingOverlay.hide();

        // Remove animation from spinner once page has finished loading
        $('.loading-spinner').css('animation', 'none');
    });

    $(document).on('click', 'a:not([href^="#"])', function () {
        var loadingOverlay = $('#loading-overlay');

        // Show loading overlay when navigation starts
        loadingOverlay.show();
    });

    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
        $("#page-content-wrapper").toggleClass("shifted");
        $("#homeTabsNav").toggleClass("shifted");
        $("#loginNav").toggleClass("shifted");
    });

    $('.collapsible-menu').on('show.bs.collapse', function () {
        $(this).prev().find('.caret-rotate').removeClass('collapsed');
    }).on('hide.bs.collapse', function () {
        $(this).prev().find('.caret-rotate').addClass('collapsed');
    });
</script>

