@model IEnumerable<MyField.Models.Player>

<br />
<div class="club-players-container">
    @if (Model == null || !Model.Any())
    {
        <p class="text-center" style="margin-top: 20vh; margin-bottom: 20vh;">The are no players for this club </p>
    }
    else
    {
        <table class="club-players-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Last name</th>
                    <th>Position</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/@item.ProfilePicture" alt="@item.FirstName" class="club-badge-image" style="border-radius: 50%; width: 50px; height: 50px;" />
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Position)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
