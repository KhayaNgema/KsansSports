<div class="standingsHeader" style="background-image: url('/Images/my_banner.jpg'); color: white; text-align: center; padding: 20px 0;">
    <p style="font-size: 36px; font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Managers</p>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-8 col-md-8 col-lg-6" style="display: flex; justify-content: center; padding-bottom: 30px;">
                <div class="fixtures-search-create-container" style="display: flex; align-items: center; justify-content: center; width: 100%;">
                    <div class="search-bar" style="flex: 1; max-width: 600px; margin: 0 auto;">
                        <input type="text" id="searchInput" class="form-control" placeholder="Search manager..." style="width: 100%;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div id="managersContent" style="margin-bottom: 10px;"></div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    function fetchPlayers() {
        $.ajax({
            url: '/Users/Managers',
            success: function (data) {
                $('#managersContent').html(data);
            }
        });
    }

    $(document).ready(function () {
        fetchPlayers();
    });
</script>