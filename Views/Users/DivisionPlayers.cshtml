@model IEnumerable<MyField.Models.Player>

@{
    ViewData["Title"] = "Division Players";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<br />
@await Html.PartialAsync("_HomeButton")
<h4 style="text-align:center;">Division Players</h4>
<br />
<div class="fixtures-search-create-container" style="margin-bottom: 10px;">
    <div class="row">
        <div class="col-12 col-lg-4 d-flex justify-content-between align-items-center">
            <div class="search-bar" style="flex: 1; margin-right: 10px;">
                <input type="text" id="searchInput" class="form-control" placeholder="Search player..." style="width: 100%;">
            </div>
        </div>
    </div>
</div>

<br />
<div class="table-responsive">
    <table class="table table-striped table-borderless">
        <thead>
            <tr style="color:white;background-color: #324260; white-space: nowrap;">
                <th>
                    Club
                </th>
                <th>
                    Profile Picture
                </th>
                <th>
                    Name (s)
                </th>
                <th>
                    Last name
                </th>
                <th>
                    Position
                </th>
                <th>
                    Jersey number
                </th>
                <th>
                    Email address
                </th>
                <th>
                    Cellphone number
                </th>
                <th>
                    Status
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="max-width: 400px;">
                    <td style="white-space: nowrap;">
                        <img src="~/@item.Club.ClubBadge" alt="@item.Club.ClubName" class="club-badge-image" />
                        @Html.DisplayFor(modelItem => item.Club.ClubName)
                    </td>
                    <td>
                        <img src="~/@item.ProfilePicture" alt="@item.FirstName" class="club-badge-image" style="border-radius: 50%; width: 50px; height: 50px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JerseyNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @if (item.IsActive == true)
                        {
                            <p>Active</p>
                        }
                        else if (item.IsSuspended == true)
                        {
                            <p>Suspended</p>
                        }
                        else
                        {
                            <p>Inactive</p>
                        }
                    </td>
@*                     <td class="text-right">
                        <button class="btn btn-primary btn-sm action-button" type="button" data-id="@item.ClubId">
                            Actions
                        </button>
                        <div class="action-tab" id="actionTab-@item.ClubId" style="display: none;">
                            <a class="tab-item" href="@Url.Action("RejoinSeason", "Clubs", new { clubId = item.ClubId })">
                                <i class="fas fa-sign-in-alt" style="color: #28a745;"></i> Rejoin
                            </a>
                            <a class="tab-item" href="@Url.Action("Edit", "Clubs", new { id = item.ClubId })">
                                <i class="tab-item" style="color: blue;"></i> Update
                            </a>
                            <a class="tab-item" href="@Url.Action("SuspendClub", "Clubs", new { id = item.ClubId })">
                                <i class="fas fa-ban" style="color: #dc3545;"></i> Suspend
                            </a>
                            <a class="tab-item" href="@Url.Action("UnsuspendClub", "Clubs", new { id = item.ClubId })">
                                <i class="fas fa-check-circle" style="color: #ffc107;"></i> Unsuspend
                            </a>
                            <a class="tab-item" href="@Url.Action("Delete", "Clubs", new { id = item.ClubId })" onclick="return confirm('Are you sure you want to delete this item?');">
                                <i class="fas fa-trash" style="color: red;"></i> Delete
                            </a>
                        </div>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $(".clubs-table tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    setTimeout(function () {
        document.getElementById("tempDataMessage").style.display = "none";
    }, 5000);
</script>