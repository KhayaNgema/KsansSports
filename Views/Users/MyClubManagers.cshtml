@model IEnumerable<MyField.Models.ClubManager>

@{
    ViewData["Title"] = ViewBag.ClubName + " Managers";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<style>

</style>

<br />
@await Html.PartialAsync("_HomeButton")
<h4 class="text-center">@ViewBag.ClubName Managers</h4>
<br />
<div>
    <form asp-area="Identity" asp-page="/Account/RegisterClubManager">
        <button type="submit" class="btn" id="addButton">
            Add a new manager
            <span class="fa fa-plus"></span>
            </button>
    </form>
</div>


<br />
@if (TempData["Message"] != null)
{
    <div id="tempDataMessage" class="alert @(TempData["Message"].ToString().Contains("successfully") ? "alert-success" : "alert-danger")" role="alert">
        @TempData["Message"]
        <span class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </span>
    </div>
}
<div class="table-responsive">
    @if(Model.Any())
    {
        <table class="table table-striped table-borderless">
            <thead>
                <tr style="color:white;background-color: #324260; white-space: nowrap;">
                    <th>Image</th>
                    <th s>Name (s)</th>
                    <th> Last name</th>
                    <th>Phone</th>
                    <th>Email address</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr styel="white-space: nowrap;">
                        <td>
                            <img src="~/@item.ProfilePicture" alt="@item.FirstName" class="club-badge-image" style="border-radius: 50%; width: 50px; height: 50px;" />
                        </td>
                        <td style="white-space: nowrap;">
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td style="white-space: nowrap;">
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td style="white-space: nowrap;">
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td style="white-space: nowrap;">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @if (item.IsActive == true && item.IsSuspended == false)
                            {
                                <p>Active</p>
                            }
                            else if (item.IsSuspended == true && item.IsActive == true)
                            {
                                <p>Suspended</p>
                            }
                            else
                            {
                                <p>Inactive</p>
                            }
                        </td>
                        <td class="text-right">
                            <button class="btn btn-primary btn-sm action-button" type="button" data-id="@item.Id">
                                Actions
                            </button>
                            <div class="action-tab" id="actionTab-@item.Id" style="display: none;">
                                @if (User.IsInRole("Personnel Administrator"))
                                {
                                    <a class="tab-item" href="@Url.Action("Deactivate", "Users", new { userId = item.Id  })">
                                        <i class="fas fa-pause" style="color: red;"></i> Deactivate
                                    </a>
                                    <a class="tab-item" href="@Url.Action("Activate", "Users", new { userId = item.Id })">
                                        <i class="fas fa-check-circle" style="color: green;"></i> Activate
                                    </a>
                                    <a class="tab-item" href="@Url.Action("Suspend", "Users", new { userId = item.Id })">
                                        <i class="fas fa-ban" style="color: red;"></i> Suspend
                                    </a>
                                    <a class="tab-item" href="@Url.Action("Unsuspend", "Users", new { userId = item.Id })">
                                        <i class="fas fa-check-circle" style="color: green;"></i> Unsuspend
                                    </a>
                                    <a class="tab-item" href="@Url.Action("Delete", "Users", new { userId = item.Id })">
                                        <i class="fas fa-trash" style="color: red;"></i> Delete
                                    </a>
                                }
                                else if (User.IsInRole("Club Administrator"))
                                {
                                    <a class="tab-item" href="@Url.Action("UpdateClubManager", "Users", new { userId = item.Id })">
                                        <i class="fas fa-user" style="color: blue;"></i> Profile
                                    </a>
                                    <a class="tab-item" href="@Url.Action("EndClubManagerContract", "Users", new { userId = item.Id })">
                                        <i class="fas fa-trash" style="color: red;"></i> End COntract
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
    <p class="text-center" style="margin-top: 20vh; margin-bottom: 20vh;">There are no managers for your club yet.</p>
    }
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        $("#searchInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $(".clubs-table tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
    setTimeout(function () {
        document.getElementById("tempDataMessage").style.display = "none";
    }, 5000);
</script>