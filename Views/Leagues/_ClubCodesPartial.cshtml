@model IEnumerable<MyField.Models.Club>

<br />

@if (Model.Any())
{
    <div class="secret-codes-container">
        <div class="row">
            @foreach (var item in Model.DistinctBy(club => club.ClubId))
            {
                <div class="col-12 mb-3">
                    <div class="codes-card shadow border-radius-7">
                        <div class="codes-card-body d-flex align-items-center">
                            <img src="~/@item.ClubBadge" alt="@item.ClubName" class="club-badge-image" />
                            <div class="ms-3 w-100">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        @Html.DisplayFor(modelItem => item.ClubName)
                                    </div>
                                    <div>
                                        <p class="card-text mb-0">********</p> 
                                    </div>
                                    <button class="btn btn-outline-primary" onclick="copyClubCodeToClipboard('@item.ClubCode')"><i class="fa fa-copy"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh; flex-direction: column;">
        <p class="text-center">There are no club codes yet.</p>
    </div>
}

