            <td>
                @Html.DisplayFor(modelItem => item.JoiningFee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentRules)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentLocation)
