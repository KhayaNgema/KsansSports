@model IEnumerable<MyField.Models.Player>

<br />
<div class="club-players-container">
    @if (Model == null || !Model.Any())
    {
        <p class="text-center" style="margin-top: 20vh; margin-bottom: 20vh;">There are no players for this club</p>
    }
    else
    {
        <div class="table-responsive table-borderless">
            <table class="table table-striped table-borderless" id="playersTable">
                <thead>
                    <tr style="color:white; background-color: #324260; white-space: nowrap;">
                        <th>Player</th>
                        <th>Position</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="player-row" data-user-id="@item.Id" style="cursor: pointer; white-space: nowrap; position: relative;">
                            <td>
                                <img src="~/@item.ProfilePicture" alt="@item.FirstName" class="club-badge-image" />
                                @Html.DisplayFor(modelItem => item.FirstName)
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Position)
                                <span class="profile-arrow"><i class="fas fa-chevron-right"></i></span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script>
    document.querySelectorAll('#playersTable .player-row').forEach(row => {
        row.addEventListener('mouseover', function () {
            this.style.transform = 'perspective(1000px) rotateX(5deg) rotateY(5deg)';
            this.style.boxShadow = '0 10px 20px rgba(0, 0, 0, 0.2)';
        });
        row.addEventListener('mouseout', function () {
            this.style.transform = '';
            this.style.boxShadow = '';
        });
        row.addEventListener('click', function () {
            const userId = this.getAttribute('data-user-id');
            window.location.href = `@Url.Action("PlayerProfile", "Users")?userId=${userId}`;
        });
    });
</script>

<style>
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-borderless {
        border: none;
    }

        .table-borderless td, .table-borderless th {
            border: none;
        }

    .club-badge-image {
        border-radius: 50%;
        width: 50px;
        height: 50px;
    }

    .player-row {
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .player-row:hover {
            transform: perspective(1000px) rotateX(5deg) rotateY(5deg);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

    .profile-arrow {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #324260;
    }
</style>
