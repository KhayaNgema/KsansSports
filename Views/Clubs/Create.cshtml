@model MyField.ViewModels.ClubViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<br />
@await Html.PartialAsync("_BackButton")
<h4 class="text-center">Create a new club</h4>
<br />
<div class="row club-edit-container">
    <div class="col-md-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center">
                <div class="form-group text-center">
                    <div class="mb-3">
                        <div style="display: flex; justify-content: center; position: relative;">
                            <div class="club-badge-container" style="border: 1px solid #ccc; padding: 0; border-radius: 5%; width: 150px; height: 150px; overflow: hidden; position: relative;">
                                <i class="fa fa-club" id="club-badge-placeholder" style="font-size: 90px; color: #f0f0f0;"></i>
                                <img id="club-badge-preview" alt="" class="club-badge-image" style="border-radius: 5%; width: 100%; height: 100%; object-fit: cover; display: none;" />
                            </div>
                            <label for="Input_ClubBadge" class="camera-icon" style="position: absolute; bottom: 0; margin: 10px; color: #000325; cursor: pointer; z-index: 1;  margin-top:5px;">
                                <i class="fa fa-camera" style="font-size: 30px;"></i>
                                <input asp-for="ClubBadges" id="Input_ClubBadge" class="form-control" type="file" onchange="previewClubBadge(event)" accept="image/*" style="display: none;" required />
                                <input asp-for="ClubBadges" id="Input_ClubBadgeFileName" type="hidden" />
                            </label>
                        </div>
                    </div>
                    <span asp-validation-for="ClubBadges" class="text-danger"></span>
                </div>


            <div class="form-floating mb-3">
                <input asp-for="ClubName" class="form-control border-bottom-only" placeholder="clubname" />
                <label asp-for="ClubName" class="form-label">Club name</label>
                <span asp-validation-for="ClubName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ClubAbbr" class="form-control border-bottom-only" placeholder="ClubAbbr" />
                <label asp-for="ClubAbbr" class="form-label">Club abbreviation</label>
                <span asp-validation-for="ClubAbbr" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ClubLocation" class="form-control border-bottom-only" placeholder="ClubLocation" />
                <label asp-for="ClubLocation" class="form-label">Club location</label>
                <span asp-validation-for="ClubLocation" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="ClubHistory" class="form-control border-bottom-only" placeholder="ClubHistory" style="min-height: 150px;"></textarea>
                <label asp-for="ClubHistory" class="form-label">Club history</label>
                <span asp-validation-for="ClubHistory" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <textarea asp-for="ClubSummary" class="form-control border-bottom-only" placeholder="ClubSummary" style="min-height: 150px;"></textarea>
                <label asp-for="ClubSummary" class="form-label">Club summary</label>
                <span asp-validation-for="ClubSummary" class="text-danger"></span>
            </div>

            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group" style="display: flex; justify-content: flex-end;">
                        <input type="submit" value="Submit" class="btn btn-success" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function previewClubBadge(event) {
            var reader = new FileReader();
            reader.onload = function () {
                var output = document.getElementById('club-badge-preview');
                output.src = reader.result;
                output.style.display = 'block';
                document.getElementById('club-badge-placeholder').style.display = 'none';
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
