@model MyField.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Payment details";
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
}

<br />
@await Html.PartialAsync("_BackButton")
<h4 style="text-align:center;">Payment #@Model.PaymentId</h4>
<br />

<div class="d-flex justify-content-center">
    <div class="player-transfer-card">
        <div class="header" style="text-align:left;">
            <div class="card-body">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <div class="mb-3">
                        <label><strong>Payment made by:</strong> @Model.FirstName @Model.LastName</label>
                    </div>

                    <div class="mb-3">
                        <label><strong>Amount paid:</strong> ZAR @Model.AmountPaid</label>
                    </div>

                    <div class="mb-3">
                        <label><strong>Payment status:</strong> @Model.PaymentStatus</label>
                    </div>

                    <div class="mb-3">
                        <label><strong>Payment Date:</strong> @Model.PaymentDate</label>
                    </div>

                    <div class="mb-3">
                        <label><strong>Device:</strong> @Model.DeviceName</label>
                    </div>

                    <div class="mb-3">
                        <label><strong>Browser:</strong> @Model.Browser</label>
                    </div>

                    <div class="mb-3">
                        <label><strong>Location:</strong> @Model.DeviceLocation</label>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


