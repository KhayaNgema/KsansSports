@model MyField.Models.Invoice

@{
    Layout = "~/Views/Shared/_PagesLayout.cshtml";
    ViewData["Title"] = ViewBag.ClubName + " Proof fo player transfer";
}

<head>
    <meta charset="utf-8" />
    <title>Player Invoice</title>
    <style>

        body {
            font-family: Arial, sans-serif;
        }

        .invoice-details {
            margin-bottom: 20px;
        }

            .invoice-details p {
                margin: 0;
            }
    </style>
</head>
<br />
@await Html.PartialAsync("_BackButton")
<br />
    <div class="col-sm-12 col-md-12 col-lg-12 clearance-container">
        <br />
        <div class="container" style="text-align: center">
            <img src="/Images/NFA_logo.jpg" alt="Logo" style="width:120px; height:120px; object-fit: cover;">
        <h3><strong>Nkungwini Football Association</strong></h3>
            <p class="slogan" style="font-family: 'Italic Outline Art' !important;">"Slogan here"</p>
        </div>
        <br />
        <br />
        <div class="container" style="text-align: center; width: margin: 0 auto; white-space:normal;">
            <h5 style="text-align: center; white-space:normal; font-family:Arial;">This is to confirm that @Model.Transfer?.Player?.FirstName @Model?.Transfer?.Player.LastName has been officially transferred from @Model.Transfer.SellerClub.ClubName FC to @Model.Transfer.CustomerClub.ClubName.</h5>
        </div>
        <br />
        <div class="container" style="text-align: center;">
        <div style="border-top: 1px solid #ccc; margin: 5px 0;"></div>
        <h5><strong>Player Details:</strong></h5>
        <div style="border-top: 1px solid #ccc; margin: 5px 0;"></div>
        </div>
        <br />
        <div class="container" style="text-align: center;">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-sm-10 col-md-12">
                    <div class="row" style="text-align:center;">
                         <div class="col-6">
                            <div class="mb-3 text-center">
                                <div class="clearance-profile-picture-container">
                                    <img id="profile-image-preview" src="~/@Model.Transfer.Player.ProfilePicture" alt="Current Profile Picture" class="clearance-profile-image" style="border-radius: 3%; width: 100%; height: 100%; object-fit: cover;" />
                                </div>
                            </div>
                        </div>
                    <div class="col-6" style="text-align:start!important;">
                            <div class="mb-2">
                                <label>Name(s): <strong>@Model.Transfer.Player.FirstName</strong></label>
                            </div>

                            <div class="mb-2">
                                <label>Last name: <strong>@Model.Transfer.Player.LastName</strong></label>
                            </div>

                            <div class="mb-2">
                                <label>Position: <strong>@Model.Transfer.Player.Position</strong> </label>
                            </div>

                            <div class="mb-2">
                                <label>Date of birth: <strong>@Model.Transfer.Player.DateOfBirth.ToString("MMM dd, yyyy")</strong> </label>
                            </div>

                            <div class="mb-2">
                                <label>Jersey number: <strong>#@Model.Transfer.Player.JerseyNumber</strong> </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    <div class="container" style="text-align: center;">
        <div style="border-top: 1px solid #ccc; margin: 5px 0;"></div>
        <h5><strong>Payment Details:</strong></h5>
        <div style="border-top: 1px solid #ccc; margin: 5px 0;"></div>
    </div>
    <div class="row" style="margin-left:20px;">
        <div class="col-6">
            <p><strong>Date:</strong> @Model.Payment.PaymentDate.ToString("dd MMM, yyyy")</p>
            <p><strong>Status:</strong> @Model.Payment.Status</p>
            <p><strong>Payment method:</strong> @Model.Payment.PaymentMethod</p>
        </div>
        <div class="col-6">
            <p><strong>Transfer Amount Paid:</strong> @Model.Payment.AmountPaid</p>
            <p><strong>Payment Ref no.:</strong> @Model.Payment.ReferenceNumber</p>
            <p><strong>Invoice no.:</strong> @Model.InvoiceNumber</p>
        </div>
    </div>
        <br />
    <div class="container" style="text-align: center;">
        <div style="border-top: 1px solid #ccc; margin: 5px 0;"></div>
        <h5><strong>Concerned Parties:</strong></h5>
        <div style="border-top: 1px solid #ccc; margin: 5px 0;"></div>
    </div>
    <br />
    <div class="row" style="margin-left:20px; margin-bottom:20px;">
        <div class="col-6">
            <div class="row" style="white-space:nowrap;">
                <div class="col-2" style="margin-right:7px;">
                    <img src="~/@Model.Transfer.SellerClub.ClubBadge" alt="@Model.Transfer.SellerClub.ClubName" class="club-badge-image" style="margin-right: 20px;" />
                </div>
                <div class="col-6" style="padding-top:5px; margin-top:5px;">
                    <h6><strong>@Html.DisplayFor(modelItem => @Model.Transfer.SellerClub.ClubName)</strong></h6>
                </div>
            </div>
            <br />
            <p><strong>Signature:</strong>@Model.Transfer.CreatedBy.FirstName @Model.Transfer.CreatedBy.LastName</p>
            <p><strong>Date:</strong>@Model.Transfer.ModifiedDateTime.ToString("dd MMM, yyyy")</p>
        </div>
        <div class="col-6">
            <div class="row" style="white-space:nowrap;">
                <div class="col-2" style="margin-right:7px;">
                    <img src="~/@Model.Transfer.CustomerClub.ClubBadge" alt="@Model.Transfer.CustomerClub.ClubName" class="club-badge-image" style="margin-right: 20px;" />
                </div>
                <div class="col-6" style="padding-top:5px; margin-top:5px;">
                    <h6><strong>@Html.DisplayFor(modelItem => @Model.Transfer.CustomerClub.ClubName)</strong></h6>
                </div>
            </div>
            <br />
            <p><strong>Signature:</strong>@Model.Payment.PaymentMadeBy.FirstName @Model.Payment.PaymentMadeBy.LastName</p>
            <p><strong>Date:</strong>@Model.Payment.PaymentDate.ToString("dd MMM, yyyy")</p>
        </div>
    </div>