@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_NoLoginLayout.cshtml";
}
<br />
@await Html.PartialAsync("_BackWhiteButton", true)
<style>
    body {
        background-image: url('/images/nfa_cover.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        margin: 0;
        padding: 0;
    }

    .login-container {
        background-color: rgba(255, 255, 255, 0.8);
        padding: 10px;
        border-radius: 10px;
    }


    .logo-container {
        margin-top: 20px;
        padding-top: 30px;
        margin-bottom: 20px;
        padding-bottom: 0;
        text-align: center;
    }

    .logo-container img {
        width: 80px; /* Default width */
        height: 80px; /* Default height */
        object-fit: cover;
        background-color: transparent;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 1.5rem; /* Default font size */
    }

    .form-floating {
        margin-bottom: 1rem;
    }

    .form-control {
        font-size: 0.9rem; /* Default font size */
        padding: 10px; /* Default padding */
    }

    .form-label {
        font-size: 0.9rem; /* Default font size */
    }

    .btn-primary {
        border-radius: 10px;
        font-size: 0.9rem; /* Default font size */
        padding: 10px; /* Default padding */
        width: 100%; /* Full width button */
        margin-bottom: 10px; /* Margin below button */
    }

    .text-center {
        text-align: center; /* Center align text */
    }
</style>
<div class="logo-container">
    <img src="/Images/nfa_logo_lgo.png" alt="Logo">
</div>
<div class="row login-container" style="margin: auto;">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <section>
            <h1>Sign In</h1>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-2">
                    <input asp-for="Input.EmailOrPhone" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.EmailOrPhone" class="form-label">Email or mobile number</label>
                    <span asp-validation-for="Input.EmailOrPhone" class="text-danger"></span>
                </div>
                <div class="form-floating mb-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row align-items-center">
                    <div class="checkbox mb-2 col-6 d-flex align-items-center">
                        <label asp-for="Input.RememberMe" class="form-label d-flex align-items-center mb-0">
                            <input class="form-check-input me-2" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="col-6 text-end">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                    </div>
                </div>
                <br />
                <div>
                    <button id="login-submit" type="submit" class="btn btn-lg btn-primary">Log in</button>
                </div>
                <div class="account-link-wrapper">
                    <p>Don't have an account?</p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a new account</a>
                </div>

            </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
