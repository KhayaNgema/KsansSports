@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_NoNavBarLayout.cshtml";
}
<br />
@await Html.PartialAsync("_BackButton")
<div class="mb-3 text-center" style="margin-top:20px; padding-top:20px;margin-bottom:0; padding-bottom:0;">
    <img src="/Images/NFA_logo.jpg" alt="Logo" style="width:80px; height:80px; object-fit: cover;">
</div>
<div class="row login-container">
    <div class="col-sm-12 col-md-12 col-lg-12 ">
        <section>
            <h1 style="text-align:center; margin-bottom:50px;">Sign In</h1>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="row align-items-center">
                    <div class="checkbox mb-3 col-6 d-flex align-items-center">
                        <label asp-for="Input.RememberMe" class="form-label d-flex align-items-center mb-0">
                            <input class="form-check-input me-2" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="col-6 text-end">
                        <a id="forgot-password" asp-page="./ForgotPassword">forgot password?</a>
                    </div>
                </div>
                <br />
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="margin-bottom:2px; border-radius:15px;">Log in</button>
                </div>
                <div style="display: flex; justify-content: center;">
                    <p style="margin-right: 5px;">Don't have an account?</p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create a new account</a>
                </div>
                </form>
        </section>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
